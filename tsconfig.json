{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "module": "commonjs",
        "target": "es2015",
        "lib": ["es2017"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "esModuleInterop": true
    }
}
